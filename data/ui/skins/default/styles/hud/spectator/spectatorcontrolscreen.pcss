hud {
		
	spectatorControls {
		screen {
			source = "";
			priority = screen-normal;
			scale-mode = preserve-aspect;
			anchor-horizontal = left;
			anchor-vertical = top;
		}
		component {
			image-substitution = true;
			
			.dividedBarLabel{}
			.playerNameLabel{}
			.statusLabel{}
			.cameraCombo{}
			.fowCombo{}			
			.cameraControlIcon
			{
				text = "UIHUD.SPECTATOR.CAMERAMODE.ICON";
			}
			.fowControlIcon
			{
				text = "UIHUD.SPECTATOR.FOWMODE.ICON";
			}			
			.listControlIcon
			{
				text = "UIHUD.SPECTATOR.PLAYERLIST.ICON";
			}
			
			.factionIcon{
				align-horizontal = "center";
				align-vertical = "center";
				image-fit = "stretch";
				image-rendering = "smooth";
			}
			
			
		}
	}
}